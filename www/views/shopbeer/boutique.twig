{% extends "layout/all.twig" %}



{% block title %}{{ title }}{% endblock %}

{% block content %}
    <h1 class="titreduhaut">Nos Produits</h1>
    <section id="boutiques">
        {% for beer in beers %}
            <article class="bieres">
                <h2>{{beer.title}}</h2>
                <div><img src="{{beer.img}}"/></div>
                <p>{{beer.content}}</p>
                <p class="price">{{beer.price}}</p>
                <p>{{beer.PriceHT}}</P>
                <p>{{beer.PriceTTC}}</P>
                <div>
                    <input class="text-center" type="number" value="0" min="0" max="50" name="name.{{beer.id}} ?>">
                    <input id="prixInitial{{beer.id}}" type="hidden" value="{{beer.price}}">
                    <input type="submit" name="subbeer" value="Acheter">
                </div>
            </article>
        {% endfor %}
    </section>

{% endblock %}